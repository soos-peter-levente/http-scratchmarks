{
  "description": "Search & Replace HTTP response bodies before loading them.",
  "manifest_version": 2,
  "name": "HTTP Scratchmarks",
  "version": "0.1",

  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Alt+S"
      }
    }
  },

  "permissions": [
    "activeTab",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "webNavigation",
    "<all_urls>"
  ],

  "icons": {
    "48": "res/icons/tag-icon/icon48.png",
    "96": "res/icons/tag-icon/icon96.png"
  },

  "browser_action": {
    "default_title": "HTTP Scratchmarks",
    "default_icon": "res/icons/tag-icon/icon48.png",
    "default_popup": "popup/html/popup.html"
  },

  "web_accessible_resources": [
    "res/icons/tag-icon/icon96.png"
  ],

  "background": {
    "scripts": [
      "util/util.js",
      "background/lib/Rule.js",
      "background/lib/Path.js",
      "background/lib/Site.js",
      "background/lib/RuleFilter.js",
      "background/lib/Storage.js",
      "background/lib/RequestSearchAndReplace.js",
      "background/lib/BackgroundService.js",

      "background/background.js"
    ]
  }
}
